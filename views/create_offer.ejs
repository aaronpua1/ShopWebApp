                      Filter by vendor
                    </option><% for(var i = 0; i < vendors.length; i++) { %>
                    <option value="<%= vendors[i] %>">
                      <%= vendors[i] %>
                    </option><% } %>
                  </select>
                </div>
              </div>
            </div>
            <div class="form-group col-md-12">
              <div class="control-group">
                <label class="control-label" for="product_type">Filter by product type</label>
