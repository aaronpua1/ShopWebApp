        $('#offer_name').on('input', function() {
            var input = $(this);
            var is_valid = true;
            
            for (var i = 0; i < keys.length; i++) {
                if (input.val().toLowerCase() === keys[i].toLowerCase()) {
                    is_valid = false;
                    break;
                }
            }
            
            if(is_valid)
                {input.removeClass("invalid").addClass("valid");}
            else
                {input.removeClass("valid").addClass("invalid");}
        });
