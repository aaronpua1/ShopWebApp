          <p class="h1">Create Your Offer</p>        
        <% } else { %>
          <p class="h1">Edit Your Offer</p>
        <% } %>                
      </div>
      <hr>
      <form id="offer-form" method="POST" action="/create-offer">
        <% if (typeof store == "undefined") { %>
          <input class="form-control" type="hidden" id="upsell_configs" name="upsell_configs" value="">
          <input class="form-control" type="hidden" id="product_configs" name="product_configs" value="">
          <input class="form-control" type="hidden" id="key" name="key" value="">
          <input class="form-control" type="hidden" id="keys" name="keys" value="<%= keys %>">
          <input class="form-control" type="hidden" id="prev_meta_ids" name="prev_meta_ids" value="">
          <input class="form-control" type="hidden" id="prev_owner_ids" name="prev_owner_ids" value="">
        <% } else { %>
          <input class="form-control" type="hidden" id="upsell_configs" name="upsell_configs" value=<%= upsell_config %>>
          <input class="form-control" type="hidden" id="product_configs" name="product_configs" value=<%= product_config %>>
          <input class="form-control" type="hidden" id="key" name="key" value="<%= store.offer_name %>">
          <input class="form-control" type="hidden" id="keys" name="keys" value="<%= keys %>">
          <input class="form-control" type="hidden" id="prev_meta_ids" name="prev_meta_ids" value="<%= prod_meta_ids %>">
          <input class="form-control" type="hidden" id="prev_owner_ids" name="prev_owner_ids" value="<%= prod_owner_ids %>">
        <% } %>        
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h4 class="panel-title">
              <h4 style="color: white;">Step 1: Setup Offer</h4>
              <span id="error-top" class="error">There's an error on the page</span>
            </h4>
          </div>
          <div class="panel-body">
            <div class="form-group col-md-12 offer-input-groups required">
              <div class="control-group">
                <label class="control-label" for="offer_name">Offer Name</label>
                <div class="controls">
                  <% if (typeof store == "undefined") { %>
                    <input class="form-control invalid" id="offer_name" name="offer_name" placeholder="Internal use only (will not be displayed on store)" required="" style="width: 49%;" type="text" maxlength="27">
                  <% } else { %>
                    <input class="form-control valid" id="offer_name" name="offer_name" placeholder="Internal use only (will not be displayed on store)" required="" style="width: 49%;" type="text" value="<%= store.offer_name %>" maxlength="27" readonly="readonly">
                  <% } %>
                  <span class="error">This offer name is already being used.</span>
                </div>
              </div>
            </div>
            <div class="form-group col-md-12 offer-input-groups">
              <div class="control-group">
                <label class="control-label" for="offer_title">Offer Banner Title</label>
                <div class="controls">
                  <% if (typeof store == "undefined") { %>
                    <input class="form-control" id="offer_title" name="offer_title" placeholder="Related Items" style="width: 49%;" type="text">
                  <% } else { %>
                    <input class="form-control" id="offer_title" name="offer_title" placeholder="Related Items" style="width: 49%;" type="text" value="<%= store.offer_title %>">
                  <% } %>
                  <span class="error">This field is required</span>
                </div>
              </div>
            </div>
            <div class="form-group col-md-12 offer-input-groups">
              <div class="control-group">
                <label class="control-label" for="offer_description">Offer Description</label>
                <div class="controls">
                  <% if (typeof store == "undefined") { %>
                    <textarea class="form-control" cols="65" id="offer_description" name="offer_description" placeholder="Based on this item, other customers also like..." rows="10" style="width: 49%;" maxlength="230"></textarea>
                  <% } else { %>
                    <textarea class="form-control" cols="65" id="offer_description" name="offer_description" placeholder="Based on this item, other customers also like..." rows="10" style="width: 49%;" maxlength="230"><%= store.offer_description %></textarea>
