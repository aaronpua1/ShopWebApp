                  <% } else { %>
                    <label class="form-check-label custom-control custom-checkbox" for="upsell_edge_type"><input name="upsell_edge_type" id="checkbox-primary" class="form-check-input custom-control-input" type="checkbox" value="rounded" checked><span class="custom-control-indicator"></span><span class="custom-control-description">Use rounded edges around upsell products?</span></label>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="form-group col-md-12">
              <div class="control-group">
                <div class="form-check">
                  <% if (typeof store == "undefined" || store.button_edge_type == "undefined") { %>
                    <label class="form-check-label custom-control custom-checkbox" for="button_edge_type"><input name="button_edge_type" id="checkbox-primary" class="form-check-input custom-control-input" type="checkbox" value="not_rounded"><span class="custom-control-indicator"></span><span class="custom-control-description">Use rounded edges on "Add to Cart" button?</span></label>
                  <% } else { %>
                    <label class="form-check-label custom-control custom-checkbox" for="button_edge_type"><input name="button_edge_type" id="checkbox-primary" class="form-check-input custom-control-input" type="checkbox" value="rounded" checked><span class="custom-control-indicator"></span><span class="custom-control-description">Use rounded edges on "Add to Cart" button?</span></label>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="form-group col-md-12">
              <div class="control-group">
                <div class="form-check">
                  <% if (typeof store != "undefined" && store.status == "undefined") { %>
                    <label class="form-check-label custom-control custom-checkbox" for="activate-offer" style="display:none;"><input name="activate_offer" id="checkbox-primary" class="form-check-input custom-control-input" type="checkbox"><span class="custom-control-indicator"></span><span class="custom-control-description">Activate Offer?</span></label>
                  <% } else { %>
                    <label class="form-check-label custom-control custom-checkbox" for="activate-offer" style="display:none;"><input name="activate_offer" id="checkbox-primary" class="form-check-input custom-control-input" type="checkbox" checked ><span class="custom-control-indicator"></span><span class="custom-control-description">Activate Offer?</span></label>
