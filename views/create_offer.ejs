            var input=$(this);
            var re = /((^|\,)((25[0-5])|(2[0-4]\d)|(1\d\d)|([1-9]?\d))){4}$/;
            var is_valid = re.test(input.val());
            if(is_valid)
                {input.removeClass("invalid").addClass("valid");}
            else
                {input.removeClass("valid").addClass("invalid");}
        });
        $('#border_highlight_color').on('input', function() {
