            if ($("#product_vendor").val() !== "none") {
                result += "vendor=" + $("#product_vendor").val() + "$";
            }
            else {
                result += "vendor=(.*?)$";
            }
            $("#product-dual-box").bootstrapDualListbox('setNonSelectedFilter', result, true);
        });

        $( "#btn-product-reset" ).click(function( event ) {
