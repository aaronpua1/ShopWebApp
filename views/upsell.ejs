<style>
/* http://alijafarian.com/responsive-image-grids-using-css/ */
.upsell-panel {
  border: 1px solid black;
  width: 75%;
}
ul.rig {
  list-style: none;
  font-size: 0px;
  padding: 15px;
}
ul.rig .product {
  display: inline-block;
  padding: 10px;
  background: #fff;
  border: 1px solid #ddd;
  font-size: 16px;
  font-size: 1rem;
  vertical-align: top;
  box-shadow: 0 0 5px #ddd;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
ul.rig .plus {
  display: inline-block;
  padding: 10px;
  line-height: 225px;
}

ul.rig .plus img {
  vertical-align: middle;
}

ul.rig .product img {
  max-width: 100%;
  height: auto;
  margin: 0 20px 10px;
  text-align: center;
}

ul.rig .product h3 {
  margin: 0 0 5px;
  text-align: center;
}

ul.rig .product p {
  font-size: .9em;
  line-height: 1.5em;
  color: #999;
  text-align: center;
}

/* class for 2 columns */
ul.rig.columns-2 li {
  width: 47.5%; /* this value + 2.5 should = 50% */
}
/* class for 3 columns */
ul.rig.columns-3 li {
  width: 30.83%; /* this value + 2.5 should = 33% */
}
/* class for 4 columns */
ul.rig.columns-4 .product {
  width: 15.5%; /* this value + 2.5 should = 25% */
  height: 15.5%;
}
 
@media (max-width: 480px) {
  ul.grid-nav .product {
    display: block;
    margin: 0 0 5px;
  }
  ul.grid-nav .product a {
    display: block;
  }
  ul.rig {
    margin-left: 0;
  }
  ul.rig .product {
    width: 100% !important; /* over-ride all li styles */
    margin: 0 0 20px;
  }
}

</style>
</body>
</html>