<style>
/* http://alijafarian.com/responsive-image-grids-using-css/ */

ul.rig {
  list-style: none;
  font-size: 0px;
  margin-left: -2.5%; /* should match li left margin */  
}
ul.rig .product {
  display: inline-block;
  padding: 10px;
  background: #fff;
  border: 1px solid #ddd;
  font-size: 16px;
  font-size: 1rem;
  vertical-align: top;
  box-shadow: 0 0 5px #ddd;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  width: 50%;
  min-width: 150px;
  max-width: 150px;
}
ul.rig .plus {
  display: inline-block;
  padding: 10px;
  font-size: 225px;
  line-height: 50%;
}

ul.rig .plus img {
  vertical-align: middle;
}
ul.rig .cart {
  display: inline-block;
  padding: 10px;
  font-size: 225px;
  line-height: 50%;
}

ul.rig .cart button {
  vertical-align: middle;
}
ul.rig .product img {
   display: block;
   width: auto;
   margin: auto;
}

ul.rig .product h3 {
  margin: 5px 0 5px;
  text-align: center;
}

ul.rig .product p {
  font-size: .9em;
  line-height: 1.5em;
  color: #999;
  text-align: center;
}

/* class for 2 columns */
ul.rig.columns-2 li {
  width: 47.5%; /* this value + 2.5 should = 50% */
}
/* class for 3 columns */
ul.rig.columns-3 li {
  width: 30.83%; /* this value + 2.5 should = 33% */
}
/* class for 4 columns */
ul.rig.columns-4 .product {
  width: 15.5%; /* this value + 2.5 should = 25% */
  height: 15.5%;
}
 
@media (max-width: 480px) {
  ul.grid-nav .product {
    display: block;
    margin: 0 0 5px;
  }
  ul.grid-nav .product a {
    display: block;
  }
  ul.rig {
    margin-left: 0;
  }
  ul.rig .product {
    width: 100% !important; /* over-ride all li styles */
    margin: 0 0 20px;
  }
}
#add_cart_button {
    background-color: white; 
    border: 2px solid #008CBA;
    color: black; 
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
}

#add_cart_button:hover {
    background-color: #008CBA;
    color: white;
}
/* 
   Upsell Styles (Aaron's code) 
*/

{% assign width = '55px' %}
{% assign height = '40px' %}
.upsell { 
  margin:1em 0; 
}
/* Label */
.upsell .header {
  margin: 0.5em 0;
}
/* Hide radio buttons.*/
.upsell input { 
  display:none;
}
.upsell label {
  /* Rounded corners */
  -webkit-border-radius:2px;
  -moz-border-radius:2px;
  border-radius:2px;
  /* To give width and height */
  float:left;
  /* Color swatches contain no text so they need to have a width. */
  min-width:32px; 
  min-height:32px;
  /* No extra spacing between them */
  margin:0;
  /* The border when the button is not selected */
  border:#ccc 1px solid;
  /* Background color */
  background-color:#ddd;
  /* Styling text */
  font-size:13px;
  text-align:center;
  line-height:32px;
  white-space:nowrap;
  text-transform:uppercase;
}
.upsell-element label { padding:0 10px; }
.color.upsell-element label { padding:0; }
/* Styling selected swatch */
/* Slightly raised */
.upsell input:checked + label {
-webkit-box-shadow: 0px 0px 2px 2px rgba(255,162,0,1);
-moz-box-shadow: 0px 0px 2px 2px rgba(255,162,0,1);
box-shadow: 0px 0px 2px 2px rgba(255,162,0,1);
  border-color:transparent;
}

.upsell input:not(:checked) + label {
-webkit-box-shadow: 0px 0px 2px 2px rgba(255, 255, 255, 1);
-moz-box-shadow: 0px 0px 2px 2px rgba(255, 255, 255, 1);
box-shadow: 0px 0px 2px 2px rgba(255, 255, 255, 1);
  border-color:transparent;
} 

.upsell .upsell-element {
  float:left;
  -webkit-transform:translateZ(0); /* webkit flicker fix */
  -webkit-font-smoothing:antialiased; /* webkit text rendering fix */
  /* Spacing between buttons */
  margin:0px 10px 10px 0;
  /* To position the sold out graphic and tooltip */
  position:relative;
}
/* Image with the cross in it */
.crossed-out { position:absolute; width:100%; height:100%; left:0; top:0; }
.upsell .upsell-element .crossed-out { display:none; }
.upsell .upsell-element.soldout .crossed-out { display:block; }
.upsell .upsell-element.soldout label {
  filter: alpha(opacity=60); /* internet explorer */
  -khtml-opacity: 0.6;      /* khtml, old safari */
  -moz-opacity: 0.6;       /* mozilla, netscape */
  opacity: 0.6;           /* fx, safari, opera */
}
/* Tooltips */
.upsell .tooltip {
  text-align:center;
  background:gray;
  color:#fff;
  bottom:100%;
  padding: 10px;
  display:block;
  position:absolute;
  width:100px;
  left:{{ width | remove: 'px' | to_number | divided_by: 2 | minus: 50 | plus: 2 }}px;
  margin-bottom:15px;
  /* Make it invisible by default */
  filter:alpha(opacity=0);
  -khtml-opacity: 0;
  -moz-opacity: 0;
  opacity:0;
  visibility:hidden;
  /* Animations */
  -webkit-transform: translateY(10px);
     -moz-transform: translateY(10px);
      -ms-transform: translateY(10px);
       -o-transform: translateY(10px);
          transform: translateY(10px);
  -webkit-transition: all .25s ease-out;
     -moz-transition: all .25s ease-out;
      -ms-transition: all .25s ease-out;
       -o-transition: all .25s ease-out;
          transition: all .25s ease-out;
  -webkit-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
     -moz-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
      -ms-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
       -o-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
          box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
  z-index: 10000;
  -moz-box-sizing:border-box; 
  -webkit-box-sizing:border-box; 
  box-sizing:border-box;
}
.upsell .tooltip:before {
  bottom:-20px;
  content:" ";
  display:block;
  height:20px;
  left:0;
  position:absolute;
  width:100%;
}
/* CSS triangle */
.upsell .tooltip:after {
  border-left:solid transparent 10px;
  border-right:solid transparent 10px;
  border-top:solid gray 10px;
  bottom:-10px;
  content:" ";
  height:0;
  left:50%;
  margin-left:-13px;
  position:absolute;
  width:0;
}
.upsell .upsell-element:hover .tooltip {
  filter:alpha(opacity=100);
  -khtml-opacity:1;
  -moz-opacity:1;
  opacity:1;
  visibility:visible;
  -webkit-transform:translateY(0px);
     -moz-transform:translateY(0px);
      -ms-transform:translateY(0px);
       -o-transform:translateY(0px);
          transform:translateY(0px);
}
.upsell.error {
  background-color:#E8D2D2!important;
  color:#333!important;
  padding:1em;
  border-radius:5px;
}
.upsell.error p {
  margin:0.7em 0;
}
.upsell.error p:first-child {
  margin-top:0;
}
.swatch.error p:last-child {
  margin-bottom:0;
}
.upsell.error code {
  font-family:monospace;
}

/* 
   Upsell Styles (Aaron's code END) 
*/
</style>
</body>
</html>